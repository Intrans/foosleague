- content_for :heading do
  %h1= resource.name

  .col-main-heading-action
    = link_to 'New Game', new_league_game_url(resource), :class => "btn btn-primary btn-ondark"

- content_for :sideleft do
  %nav.nav.nav-main
    %h1 League Navigation
    %ul
      %li= link_to "Dashboard", "#"
      %li= link_to "Player Ladder", "#"
      %li= link_to "Team Ladder", "#"
      %li= link_to "Player Stats", "#"
      %li= link_to "Team Stats", "#"
      %li= link_to "League Stats", "#"
      %li= link_to 'League Settings', edit_league_url(resource)

- content_for :sideright do
  .player
    .player-card
      .player-card-image
        %img{ :src => "https://si0.twimg.com/profile_images/2704359237/a482581c712a8024130d4b231a9d3448.png" }
      .player-card-info
        - if current_player.name
          %h1= current_player.name

        - if current_player.twitter_name
          %p= current_player.twitter_name

    .row
      .column.six
        %p.stat.stat-large
          = current_player.wins.count
          %strong Wins
      .column.six
        %p.stat.stat-large
          = current_player.losses.count
          %strong Losses

    %h2 Win Percent
    #winpercent.chart.chart-small

    %h2 Score Diff
    #scorediff.chart.chart-small

    %h2 Ladder Skill
    #ladderskill.chart.chart-small


= image_tag resource.logo.thumb('100x100').url if resource.logo_uid

%h2 Recent Games
= render resource.games.limit(20)

- if resource.doubles?
  %h2 Teams
  %table
    %thead
      %tr
        %th Player #1
        %th Player #2
        %th Name
    %tbody
      = render resource.teams
