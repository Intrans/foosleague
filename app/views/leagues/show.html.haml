%h1= resource.name

= link_to 'Edit', edit_league_url(resource)

= image_tag resource.logo.thumb('100x100').url if resource.logo_uid

%h2 Players
= link_to 'New Player', new_league_player_url(resource)
%table
  %thead
    %tr
      %th Twitter Handle
  %tbody
    = render resource.players

%h2 Games
= link_to 'New Game', new_league_game_url(resource)
%table
  %thead
    %tr
      %th Home
      %th Home Score
      %th Away Score
      %th Away
  %tbody
    = render resource.games

- if resource.doubles?
  %h2 Teams
  %table
    %thead
      %tr
        %th Player #1
        %th Player #2
        %th Name
    %tbody
      = render resource.teams
