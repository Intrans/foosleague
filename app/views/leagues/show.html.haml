- content_for :heading do
  %h1= resource.name

  .col-main-heading-action
    = link_to 'New Game', new_league_game_url(resource), :class => "btn btn-primary btn-ondark"

- content_for :sideleft do
  = render :partial => 'layouts/leaguenav'

- content_for :sideright do
  = render :partial => 'layouts/playerstat'

.games
  = simple_form_for resource.games.build, :url => league_games_url(resource) do |form|
    = render '/games/form', :form => form
    .action
      = form.submit 'Enter', { :class => 'btn btn-primary'}
  - unless resource.games.empty?
    = render resource.games.limit(20)
  - else
    .nogames
      %p No Games Played
      = link_to 'New Game', new_league_game_url(resource), :class => "btn"
