- content_for :heading do
  %h1 #{resource.name} Settings

- content_for :sideleft do
  = render :partial => 'layouts/leaguenav'

- content_for :sideright do
  = render :partial => 'layouts/playerstat'

%h2 Players

%table#players
  %thead
    %tr
      %th Twitter Handle
      %th
  %tbody
    = render resource.players.select { |player| !player.new_record? }



- if resource.doubles?
  %hr
  %h2 Teams
  %table
    %thead
      %tr
        %th Player #1
        %th Player #2
        %th Name
    %tbody
      = render resource.teams

%hr

%h2 Add New Player
= simple_form_for resource.players.build, :url => league_players_url(resource) do |form|
  .row.newplayer
    .column.five
      = form.input :name
    .column.four
      = form.input :twitter_name
    .column.three
      = form.button :submit, :class => 'btn btn-full'

%hr

%h2 Information
= simple_form_for resource do |form|
  = form.error_messages
  .row
    .column.six
      = render 'form', :form => form
  .field-actions
    = form.button :submit, :class => 'btn btn-primary'