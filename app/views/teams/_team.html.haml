%tr
  %td= team_counter+1
  %td
    = image_tag player_avatar(team.players.first)
    = image_tag player_avatar(team.players.last)
    = team
  %td= Game.wins([team.id]).count
  %td= Game.loses([team.id]).count
  %td
    - unless Game.having_teams([team.id]).empty?
      = number_to_percentage((Game.wins([team.id]).count.to_f / Game.having_teams([team.id]).count.to_f) * 100.0, :precision => 0)
  %td= team.streak
  %td
    #{number_with_precision(team.skill, :precision => 0) } (#{team.deviation})
