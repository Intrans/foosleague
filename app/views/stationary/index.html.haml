.landing-stat
  .landing-games
    %h1 Matches Played:
    %p.count
      - Game.count.to_s.split('').each do |digit|
        %span= digit

  .landing-recentgames
    %h1 Global Results:
    .recentgames
      .recentgames-slider
        - Game.limit(10).each do |game|
          .recentgame
            = game

