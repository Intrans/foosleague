.topbar
  .row
    %h1.branding= link_to "Foosleague", root_path

    - if player_signed_in?
      .btn.btn-header.btn-header-left.has-dropdown
        - if resource && resource.is_a?(League)
          = resource
        - elsif parent && parent.is_a?(League)
          = parent
          
        %ul.dropdown.dropdown-left
          - current_player.leagues.each do |league|
            %li= link_to league, league

      .btn.btn-header.btn-header-right.has-dropdown
        =current_player
        %ul.dropdown.dropdown-right
          %li= link_to "Edit", edit_player_registration_path
          %li= link_to "Sign Out", destroy_player_session_path

    - else
      = link_to "Sign in with Twitter", player_omniauth_authorize_path(:twitter)
