%tr
  %td
    .leagueplayer-image
      = image_tag player_avatar(player)
    .leagueplayer-name
      = player
  %td.actions
    = link_to 'Delete', league_player_url(resource, player), :method => :delete, :confirm => "Are you sure you wish to delete the player #{player}?", :class => 'btn btn-small'
