%tr
  %td.center
    .leagueplayer-rank
      = league_player_counter+1
  %td.left
    .leagueplayer-image
      = image_tag player_avatar(league_player)
    .leagueplayer-name
      = league_player
  %td.center
    = league_player.wins(parent.teams.with_player(league_player).map{|l| l.id}).count
  %td.center
    = league_player.losses(parent.teams.with_player(league_player).map{|l| l.id}).count
  %td.center
    - unless league_player.wins(parent.teams.with_player(league_player).map{|l| l.id}).empty?
      = number_to_percentage((league_player.wins(parent.teams.with_player(league_player).map{|l| l.id}).count.to_f / league_player.games(parent.teams.with_player(league_player).map{|l| l.id}).count.to_f) * 100.0, :precision => 0)
  %td.center= streak(league_player, parent)
  %td.center
    %strong
      #{number_with_precision(league_player.league_membership(parent).skill, :precision => 1) }
